<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:headerLayout="@layout/nav_header_main"
    app:menu="@menu/activity_main_drawer"
    tools:context="com.example.ola.dryclean.Activites.MyAccountActivity">


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_my_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/person_img"
                    android:src="@drawable/person_img"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/personNametxt"
                    android:text="محمد على محمد"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="99999999"
                android:gravity="center"
                android:id="@+id/telephoneNum"
                android:background="@color/white"
                android:textSize="25dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="name@gmail.com"
                android:gravity="center"
                android:textSize="25dp"
                android:background="@color/white"
                android:id="@+id/emailtxt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/accountedit"
                android:text="تعديل الحساب"
                android:textSize="20dp"
                android:background="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:text="بيت الوالد العدان"-->
            <!--android:id="@+id/personaddress"-->
            <!--android:textSize="20dp"-->
            <!--android:background="@color/white" />-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/changelang"
                android:text="تغيير اللغة"
                android:textSize="20dp"
                android:background="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="تسجيل الخروج"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:id="@+id/signout"
                android:textColor="@color/white"
                android:background="@drawable/mybutton"
                android:elevation="0dp" />


        </LinearLayout>



    </LinearLayout>

</ScrollView>